<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Steam Game Inventory System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body style="background-color: rgb(20, 19, 19)">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container-fluid">
            <a href="/">
                <img width="50px" height="50px" src="https://upload.wikimedia.org/wikipedia/commons/8/83/Steam_icon_logo.svg" alt="">
            </a>
            <h3 class="text-light" style="margin-top:3px;">&nbsp;Store</h3>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            </ul>
            <a href="/users/<%= users.id %>" class="btn btn-info" role="button" data-bs-toggle="button">Back to <%= users.username %>'s profile</a>
          </div>
        </div>
    </nav>

    <div class="container-sm " style="margin-top:10px;">
        <a href="/games/<%= users.id %>/add" class="btn btn-info" role="button" data-bs-toggle="button">Add new games</a>
        <a href="/carts/<%= users.id %>" style="float:right" class="btn btn-info">View Cart</a>
        <table class="table table-bordered border-light table-dark table-striped" style="margin-top:10px;">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Genre</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% games.forEach(game => { %>
                <tr>
                    <th><a href="/games/<%= users.id %>/detail/<%= game.id %>" style="color:white; text-decoration: none;"><%= game.name %></a></th> 
                    <td><%= game.genre %></td>
                    <td>Rp. <%= game.price %></td>
                    <td>
                        <div>
                            <a href="/games/<%= users.id %>/detail/<%= game.id %>" class="btn btn-sm btn-info" role="button" >View Game</a>
                        </div>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>