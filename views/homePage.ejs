<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Steam Game Inventory System</title>

    <style>
        tr {
            text-align: center;
        }
        img {
            border-radius: 50%;
        }
    </style>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body style="background-color: rgb(20, 19, 19)">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container-fluid">
            <a href="/">
                <img width="50px" height="50px" src="https://upload.wikimedia.org/wikipedia/commons/8/83/Steam_icon_logo.svg" alt="">
            </a>
            <h3 class="text-light" style="margin-top:3px;">&nbsp;Welcome!</h3>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            </ul>
            <a href="/users/register " class="btn btn-info" role="button" data-bs-toggle="button">Register new user here!</a>
          </div>
        </div>
    </nav>
    
    <div class="container-sm" style="margin-top:20px;">
        <table class="table table-bordered border-light table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Avatar</th>
                    <th scope="col">Username</th>
                    <!-- <th scope="col">Total Games Owned</th> -->
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td>
                        <a href="/users/<%= user.id %>" style="color:white; text-decoration: none;">
                            <img width="100px" height="100px" src="<%= user.avatar %>">
                        </a>
                    </td>
                    <td>
                        <a href="/users/<%= user.id %>" style="color:white; text-decoration: none;">
                            <br><%= user.username %>
                        </a>
                    </td>
                    <!-- <td><br><%= user.UserInventories.length %></td> -->
                    <td>
                        <br><a href="/users/<%= user.id %>" class="btn btn-info btn-sm" role="button">Go to Profile</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>