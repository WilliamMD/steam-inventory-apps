<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Steam Game Inventory System</title>

    <style>
        tr {
            text-align: center;
        }
        img {
            border-radius: 50%;
        }
    </style>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body style="background-color: rgb(20, 19, 19)">

    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container-fluid">
            <a href="/">
                <img width="50px" height="50px" src="https://upload.wikimedia.org/wikipedia/commons/8/83/Steam_icon_logo.svg" alt="">
            </a>
            <h3 class="text-light" style="margin-top:3px;">&nbsp;<%= users.username %>'s Cart</h3>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            </ul>
            <a href="/users/<%= users.id %>" class="btn btn-info" role="button" data-bs-toggle="button">Back to <%= users.username %>'s profile</a>
          </div>
        </div>
    </nav>
    <br>

    <div class="container-sm" style="margin-top:10px;">
        <a href="/games/<%= users.id %>/store" class="btn btn-info" role="button" data-bs-toggle="button">Go to Store Page</a>
        <h5 class="text-light" style="margin-top:10px;">User Wallet: <%= users.wallet %></h5>
        
        <table class="table table-bordered border-light table-dark table-striped" style="margin-top:10px;">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% carts.forEach(cart => { %>
                    <tr>
                        <th><a href="/games/<%= users.id %>/detail/<%= cart.Game.id %>" style="color:white; text-decoration: none;"><%= cart.Game.name %></a></th> 
                        <th><%= cart.Game.genre %></th>
                        <th><%= cart.Game.price %></th>
                        <th>
                            <div class="center" style="display:flex; justify-content: space-between; margin-top:-10px;">
                                <form action="/carts/remove/<%= cart.id %>" method="post">
                                    <input style="margin-top:10px" class="btn btn-sm btn-danger" type="submit" value="Remove Game">
                                </form>
                                <form action="/inventories/buy/<%= cart.id %>" method="post">
                                    <input style="margin-top:10px" class="btn btn-sm btn-warning" type="submit" value="Buy Game">
                                </form>
                            </div>
                        </th>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>